<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="CalendarPickerCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textColor">@color/colorTextMain</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="CalendarPickerCell.Month">
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="CalendarPickerCell.Week" parent="CalendarPickerCell">
    </style>

    <style name="CalendarPickerCell.Day">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
